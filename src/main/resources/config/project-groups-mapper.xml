<!-- 
	<select id="isExist" parameterType="map" resultType="int">
		SELECT count(idx) as cnt FROM project_groups
		WHERE
			0 = 0
			<if test="map.idx != null"> and idx = #{map.idx}</if>
			<if test="map.keyword != null"> and name = #{map.keyword}</if>
	</select>
-->
	<select id="isExist" resultType="int" >
		select result from (
			SELECT IFNULL(idx,0) as result, count(idx) as cnt FROM project_groups
			WHERE
				0 = 0
				<if test="_parameter.containsKey('idx')">
					<if test="idx != null"> and idx = #{idx}</if>
				</if>
				<if test="_parameter.containsKey('keyword')">
					<if test="keyword != null"> and name = #{keyword}</if>
				</if>
		) as a
	</select>
	
	<select id="count" parameterType="String" resultType="int">
		SELECT count(idx) as cnt FROM project_groups
		<if test="keyword != null">
		WHERE
			name like '%${keyword}%'
			or description like '%${keyword}%'
		</if>
	</select>
	
	<select id="findOne" resultMap="ProjectGroup">
		SELECT idx, name, description , reg_date FROM project_groups
		WHERE
			0 = 0
			<if test="_parameter.containsKey('idx')">
				<if test="idx != null"> and idx = #{idx}</if>
			</if>
			<if test="_parameter.containsKey('name')">
				<if test="name!= null"> and name = #{name}</if>
			</if>
	</select>

	<select id="findList" parameterType="map" resultMap="ProjectGroup">
		SELECT idx, name, description , reg_date 
		FROM project_groups
		<if test="_parameter.containsKey('keyword')">
			<if test="keyword != null">
			where
				name like '%${keyword}%'
				or description like '%${keyword}%'
			</if>
		</if>
		order by 
		
		<choose>
			<when test="_parameter.containsKey('order_column') and _parameter.containsKey('order_order_dir')">
				${order_column} ${order_dir}
			</when>
			<otherwise>
				idx desc
			</otherwise>
		</choose>
		
		limit 
			#{offset}, #{limit}
	</select>
</mapper>
